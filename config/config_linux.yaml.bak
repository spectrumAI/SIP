#--------------------- (1) Sentinel-1 (s1)---------------------------------

sentinel1_params:

    ### (A) unzip the downloaded s1 zip files
    s1_unzip_params:
        to_unzip_s1: False
        input_dir_unzip_s1: /media/l44xu/hulk/2019.09.02_arctic/sentinel_raw_zip
        output_dir_unzip_s1: /media/l44xu/hulk/2019.09.02_arctic/sentinel_raw_zip
        unzip_s1_id_str: 
            - '*.zip'
    
    ### (B) preprocess s1, e.g., incidence angle correction, thernal noise removal, etc. 
    s1_preprocess_params:
        to_preprocess_s1: True
        input_dir_preprocess_s1: /media/l44xu/hulk/2019.09.02_arctic/sentinel_raw_zip
        output_dir_preprocess_s1: /media/l44xu/hulk/2019.09.02_arctic/sentinel1_preprocessed_imgs/preprocessed
        preprocess_s1_id_str: 
            - '*.zip'
        multilook_number_s1: 4
        
        to_correct_incidence_angle_hh: True
        to_correct_incidence_angle_hv: True
        to_correct_thermal_noise_hv: True
        output_bits_s1: 8
        to_skip_if_result_files_exist_preprocess: True 

    ### (C) geocode and reproject s1
    s1_reproject_params:
        to_reproject_s1: True
        input_dir_reproject_s1: /media/l44xu/hulk/2019.09.02_arctic/sentinel1_preprocessed_imgs/preprocessed
        output_dir_reproject_s1: /media/l44xu/hulk/2019.09.02_arctic/sentinel1_preprocessed_imgs/reproject
        reproject_s1_id_str: 
            - '*hh*001*t.tiff'
            - '*hv*002*t.tiff'
            - '*_*_background_mask.tiff'
        resampling_methods_reproject_s1:
            - average
            - average
            - med
        destination_srs_reprojection_name_s1: EPSG:3413
        to_skip_if_result_files_exist_reproject: False


    ### (D) mask out some polygons defined in shapefile, e.g., land areas
    s1_mask_params:
        to_mask_out_polygons_s1: True
        input_dir_mask_out_polygons_s1: /media/l44xu/hulk/2019.09.02_arctic/sentinel1_preprocessed_imgs/reproject
        output_dir_mask_out_polygons_s1: /media/l44xu/hulk/2019.09.02_arctic/sentinel1_preprocessed_imgs/reproject
        mask_s1_id_str: 
            - '*002_*_background_mask_reprojected.tiff'
        destination_srs_mask_name_s1: EPSG:3413
        shp_file_with_polygon_masks_s1: /media/l44xu/sda1/2019.09.03_arctic/shoreline_shp/output.shp
        to_skip_if_result_files_exist_mask: False

       
    ### (E) enhance images by higlighting a specified value range
    s1_enhance_reproject_params:
        to_enhance_reproject_s1: False
        input_dir_enhance_reproject_s1: /media/l44xu/hulk/2019.09.02_arctic/sentinel1_preprocessed_imgs/reproject
        output_dir_enhance_reproject_s1: /media/l44xu/hulk/2019.09.02_arctic/sentinel1_preprocessed_imgs/reproject_enhance
        enhance_reproject_s1_id_str: 
            - '*hh*001*t_reprojected.tiff'
            - '*hv*002*t_reprojected.tiff'
        min_value_cut_enhance_reproject: 10
        max_value_cut_enhance_reproject: 250
        to_skip_if_result_files_exist_enhance_reproject: False


    ### (F) merge GeoTiff files into a single Geotiff
    s1_merge_params:
        to_merge_s1: True
        input_dir_merge_s1: /media/l44xu/hulk/2019.09.02_arctic/sentinel1_preprocessed_imgs/reproject
        output_dir_merge_s1: /media/l44xu/hulk/2019.09.02_arctic/sentinel1_preprocessed_imgs/mosaic
        merge_s1_id_str: 
            - '*hh*001*t_reprojected.tiff'
            - '*hv*002*t_reprojected.tiff'
            - '*002_*_background_mask_reprojected.tiff'
        to_skip_if_result_files_exist_merge: False

        
    ### (G) enhance images by highlighting a specified value range
    s1_enhance_merge_params:
        to_enhance_merge_s1: False
        input_dir_enhance_merge_s1: /media/l44xu/hulk/2019.09.02_arctic/sentinel1_preprocessed_imgs/mosaic
        output_dir_enhance_merge_s1: /media/l44xu/hulk/2019.09.02_arctic/sentinel1_preprocessed_imgs/mosaic_enhance
        enhance_merge_s1_id_str: 
            - '*hh*001*t_reprojected_merged.tiff'
            - '*hv*002*t_reprojected_merged.tiff'
        min_value_cut_enhance_merge: 10
        max_value_cut_enhance_merge: 250
        to_skip_if_result_files_exist_enhance_merge: False


    ### (H) breaking mosaic into small blocks        
    s1_generate_small_blocks_params:
        to_generate_small_blocks_s1: False
        input_dir_small_blocks_s1:  /media/l44xu/hulk/2019.09.02_arctic/sentinel1_preprocessed_imgs/mosaic
        output_dir_small_blocks_s1:  /media/l44xu/hulk/2019.09.02_arctic/sentinel1_preprocessed_imgs/small_blocks
        generate_small_blocks_s1_id_str:
            - '*hh*001*t_reprojected_merged.tiff'
            - '*hv*002*t_reprojected_merged.tiff'
            - '002_*_background_mask_reprojected_merged.tiff'
        block_height_s1: 1028
        block_width_s1: 1028
        block_height_overlap_s1: 20
        block_width_overlap_s1: 20
        to_skip_if_result_files_exist_blocks: False



